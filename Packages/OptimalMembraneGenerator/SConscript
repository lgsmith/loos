import sys
import os

Import('env')
PREFIX = env['PREFIX'] + '/OptimalMembraneGenerator/'

executables = 'LipidLibrary.py NAMD.py OptimalMembraneGenerator.py ParseOptions.py PSFGen.py WaterBox.py solvate.py'
files = 'water_small.pdb'
dirs = 'doc example'

omg_package = []
# Only install if pyloos is being built (i.e. pyloos=1 on command line)

if int(env['pyloos']):
    # Executables and dir have same perms, so group together...

    for f in Split(executables + ' ' + dirs):
        Command(PREFIX + f, f, [
                Copy("$TARGET", "$SOURCE"),
                Chmod("$TARGET", 0o755)
                ])

    for d in Split(files):
        Command(PREFIX + d, d, [
                Copy("$TARGET", "$SOURCE"),
                Chmod("$TARGET", 0o644)
                ])

# dummy return...
Return('omg_package')
